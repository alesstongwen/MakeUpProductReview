@model ErrorViewModel

@{
    var title = ViewBag.ErrorTitle as string ?? "Oops! Something went wrong.";
    var message = ViewBag.ErrorMessage as string ?? "An error occurred while processing your request.";
    ViewData["Title"] = title;
}

<div class="container mt-5">
    <h1 class="text-danger">@title</h1>
    <p class="text-muted">@message</p>

    @if (Model?.ShowRequestId == true)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }
</div>
