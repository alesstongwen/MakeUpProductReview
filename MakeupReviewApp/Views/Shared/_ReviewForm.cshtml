@model MakeupReviewApp.Models.Review

<form id="reviewForm" asp-action="Create" asp-controller="Review" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label>Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="1">⭐</option>
            <option value="2">⭐⭐</option>
            <option value="3">⭐⭐⭐</option>
            <option value="4">⭐⭐⭐⭐</option>
            <option value="5">⭐⭐⭐⭐⭐</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Comment:</label>
        <textarea asp-for="Comment" class="form-control" required></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
