@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-5">
    <h2>Roles</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="ManageUsers" asp-route-roleId="@role.Id" class="btn btn-sm btn-info">Manage Users</a>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-secondary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
